        <ListBox x:Name="Configs" Grid.Column="1" HorizontalAlignment="Left" Height="426" Margin="420.2,198,0,0" VerticalAlignment="Top" Width="347" Grid.ColumnSpan="2" Grid.RowSpan="2" SelectionMode="Extended"/>
        <Label Content="Pick the Sysmon Config To Deploy:" Grid.Column="1" HorizontalAlignment="Left" Margin="420,166,0,0" VerticalAlignment="Top" Width="235" FontWeight="Bold"/>
        <Button x:Name="CreateDirectories" Content="Create Directories&#xD;&#xA;" Grid.Column="2" HorizontalAlignment="Left" Margin="244.6,214,-276,0" VerticalAlignment="Top" Width="149" Click="CreateDirectories_Click"/>
        <Button Content="Clear Configs" Grid.Column="1" HorizontalAlignment="Left" Margin="420.8,265.6,0,0" VerticalAlignment="Top" Width="347" Click="Button_Click_2" Grid.Row="1" Grid.ColumnSpan="2"/>
